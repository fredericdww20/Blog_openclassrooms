{% extends 'base.html.twig' %}

{% block body %}

    {% for result in results %}
        <li>{{ result.title }}</li>
    {% endfor %}

    <div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-md space-y-8">
            <div>
                <img class="h-40 rounded mx-auto object-cover" src="https://upload.wikimedia.org/wikipedia/fr/0/0d/Logo_OpenClassrooms.png?20210604083359" alt="logo yanola">
                <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">
                    Création d'un articles</h2>
            </div>
            <form class="mt-8 space-y-6 " action="/OpenClassrooms/add" method="POST">
                <input type="hidden" name="" value="true">
                <div class="-space-y-px rounded-md shadow-sm">
                    <div>
                        <label for="email-address" class="ml-2 sr-only">Titre</label>
                        <input id="email-address" name="title" type="text"  required class=" relative block w-full rounded-t-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-slate-50 sm:text-sm sm:leading-6 pl-2" placeholder="Votre titre">
                    </div>
                    <div>
                        <label for="email-address" class="sr-only">Prénom</label>
                        <input id="email-address" name="chapo" type="text"  required class="my-2 relative block w-full rounded-t-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-slate-50 sm:text-sm sm:leading-6 pl-2" placeholder="Description courte">
                    </div>
                    <div>
                        <label for="email-address" class="sr-only">Votre email</label>
                        <input id="email-address" name="description" type="text"  required class="rrelative block w-full rounded-t-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-slate-50 sm:text-sm sm:leading-6 pl-2" placeholder="Description">
                    </div>
                </div>

                <div>
                    <button type="submit" class="group relative flex w-full justify-center rounded-md bg-violet-400 py-2 px-3 text-sm font-semibold text-white hover:bg-violet-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-50">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3">
            <svg class="h-5 w-5 text-slate-50 group-hover:text-slate-100" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z" clip-rule="evenodd" />
            </svg>
          </span>Publier
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}