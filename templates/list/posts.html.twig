</div>
<section class="bg-white border-b py-8">
    <div class="container max-w-5xl mx-auto m-8">
        <div class="flex min-h-full items-center justify-center px-4 sm:px-6 lg:px-8">
            <div class="w-full max-w-md space-y-8">
                <div>
                    {% if message is not empty  %}
                        <div class="text-center m-5 text-green-600 bg-gray-50 dark:bg-green-700 dark:text-green-400">{{ message }}</div>
                    {% endif %}
                </div>

                <form class="mt-8 space-y-6 " action="/OpenClassrooms/add" method="POST">
                    <input type="hidden" name="id_post" value="ID_DU_POST">

                    <div class="-space-y-px rounded-md shadow-sm">
                        <div>
                            <label for="email-address" class="ml-2 sr-only">Votre titre</label>
                            <input id="email-address" name="title" type="text" required
                                   class=" relative block w-full rounded-t-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-slate-50 sm:text-sm sm:leading-6 pl-2"
                                   placeholder="Votre titre">
                        </div>
                        <div>
                            <label for="email-address" class="sr-only">Description courte</label>
                            <input id="email-address" name="chapo" type="text" required
                                   class="my-2 relative block w-full rounded-t-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-slate-50 sm:text-sm sm:leading-6 pl-2"
                                   placeholder="Description courte">
                        </div>
                        <div>
                            <label for="email-address" class="sr-only">Description</label>
                            <input id="email-address" name="description" type="text" required
                                   class="rrelative block w-full rounded-t-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-slate-50 sm:text-sm sm:leading-6 pl-2"
                                   placeholder="Description">
                        </div>
                    </div>

                    <div>
                        <button type="submit"
                                class="group relative flex w-full justify-center rounded-md py-2 px-3 text-sm font-semibold text-black hover:text-grey border-solid border-2 border-black-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-50">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3">
          </span>Publier
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>
{% endblock %}