</div>
<section class="bg-white border-b py-8">
    <div class="container max-w-5xl mx-auto m-8">
        <div class="flex min-h-full items-center justify-center px-4 sm:px-6 lg:px-8">
            <div class="w-full max-w-md space-y-8">
                <div>

                    <h2 class="w-full my-2 text-3xl font-bold leading-tight text-center text-gray-800">
                        Connectez-vous à votre compte</h2>
                    <p class="mt-2 text-center text-sm text-gray-600">
                        Ou
                        <a href="{{ '/OpenClassrooms/inscription' }}"
                           class="font-medium text-black-400 hover:text-grey-500">Crée votre compte</a>
                    </p>

                    <div class="bg-white text-center text-black">{% include '_message.html.twig' %}</div>
                </div>

                <form class="space-y-6 " action="/login" method="POST">
                    <input type="hidden" name="" value="true">
                    <div class="-space-y-px rounded-md shadow-sm">
                        <div>
                            <label for="email-address" class="sr-only">Votre email</label>
                            <input id="email-address" name="email" type="email" autocomplete="email" required
                                   class="relative block w-full rounded-t-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-slate-50 sm:text-sm sm:leading-6 pl-2"
                                   placeholder="E-mail">
                        </div>
                        <div>
                            <label for="password" class="sr-only">Votre mot de passe</label>
                            <input id="password" name="password" type="password" autocomplete="current-password"
                                   required
                                   class="my-2 relative block w-full rounded-b-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-slate-50 sm:text-sm sm:leading-6 pl-2"
                                   placeholder="Mots de passe">
                        </div>
                    </div>

                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input id="remember-me" name="" type="checkbox"
                                   class="h-4 w-4 rounded border-gray-100 text-indigo-600 focus:ring-indigo-600">
                            <label for="remember-me" class="ml-2 block text-sm text-gray-900">Se souvenir de moi</label>
                        </div>

                        <div class="text-sm">
                            <a href="#" class="font-medium text-slate-600 hover:text-slate-500">Mots de passe
                                oublié?</a>
                        </div>
                    </div>

                    <div>
                        <input type="hidden" name="csrf_token" value="{{ csrfToken }}">
                        <button type="submit"
                                class="group relative flex w-full justify-center rounded-md py-2 px-3 text-sm font-semibold text-black hover:text-grey border-solid border-2 border-black-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-50">
                                <span class="absolute inset-y-0 left-0 flex items-center pl-3">
                                    <svg class="h-5 w-5 text-[#d1d5db]" viewBox="0 0 20 20" fill="currentColor"
                                         aria-hidden="true">
                                      <path fill-rule="evenodd"
                                            d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z"
                                            clip-rule="evenodd"/>
                                    </svg>
                                </span>
                            Connexion
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}

